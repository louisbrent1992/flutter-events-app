# EventEase Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================================
# Firebase Configuration
# ============================================================

# Firebase Service Account JSON (for server-side Firebase Admin SDK)
# Option 1: Place firebase-service-account.json in server/config/
# Option 2: Set this env var (can be base64-encoded JSON or raw JSON string)
FIREBASE_SERVICE_ACCOUNT=

# Firebase Realtime Database URL (optional, if using RTDB)
FIREBASE_DATABASE_URL=https://eventease-70a25-default-rtdb.firebaseio.com

# ============================================================
# OpenAI Configuration
# ============================================================

# OpenAI API Key for AI event generation and planning
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom base URL for OpenAI-compatible APIs
# OPENAI_BASE_URL=http://localhost:8000/v1

# ============================================================
# Web Import / Scraping Fallbacks (optional)
# ============================================================

# ZenRows API Key (optional, for sites that block normal fetches)
ZENROWS_API_KEY=

# Jina AI Reader fallback (cost-efficient web extraction)
JINA_AI_FALLBACK_ENABLED=true
JINA_AI_BASE_URL=https://r.jina.ai/
JINA_AI_API_KEY=
JINA_AI_TIMEOUT_MS=20000
JINA_AI_RETRIES=1

# ============================================================
# Server Configuration
# ============================================================

# Server port (default: 8080)
PORT=8080

# Node environment (development, staging, production)
NODE_ENV=production

# ============================================================
# Cloud Run / Deployment Configuration
# ============================================================

# Google Cloud Project ID
GCP_PROJECT_ID=eventease-70a25

# Cloud Run service name (production)
CLOUD_RUN_SERVICE_NAME=eventease-app-server

# Cloud Run service name (staging)
CLOUD_RUN_SERVICE_NAME_STAGING=eventease-app-server-staging

# Cloud Run region
CLOUD_RUN_REGION=us-west2

# ============================================================
# API Configuration
# ============================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://eventease.app,https://www.eventease.app

# API rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# Email Configuration (for notifications, data deletion requests)
# ============================================================

# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@eventease.app
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@eventease.app

# Support email
SUPPORT_EMAIL=support@eventease.app

# Privacy email
PRIVACY_EMAIL=privacy@eventease.app

# ============================================================
# Social Media API Keys (optional, for enhanced import features)
# ============================================================

# Instagram Basic Display API (optional)
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=

# TikTok API (optional)
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# YouTube Data API (optional)
YOUTUBE_API_KEY=

# ============================================================
# In-App Purchase Configuration
# ============================================================

# Apple App Store Connect API Key (for server-side receipt validation)
APPLE_APP_STORE_KEY_ID=
APPLE_APP_STORE_ISSUER_ID=
APPLE_APP_STORE_BUNDLE_ID=com.eventease.app

# Google Play Billing API (for server-side purchase validation)
GOOGLE_PLAY_SERVICE_ACCOUNT=

# ============================================================
# Analytics & Monitoring (optional)
# ============================================================

# Google Analytics Measurement ID
GA_MEASUREMENT_ID=G-YOUR_MEASUREMENT_ID

# Sentry DSN (for error tracking)
SENTRY_DSN=

# ============================================================
# Feature Flags
# ============================================================

# Enable/disable features
ENABLE_AI_PLANNER=true
ENABLE_FLYER_SCANNER=true
ENABLE_CALENDAR_SYNC=true
ENABLE_PREMIUM_FEATURES=true

# ============================================================
# Development / Debug
# ============================================================

# Enable debug logging
DEBUG=false

# Enable verbose API logging
VERBOSE_LOGGING=false

